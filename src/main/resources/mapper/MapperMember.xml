<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dream.cinema.service.dao.MemberDAO">

<insert id="insertMember">
	INSERT INTO member(m_email,m_pw,m_name,m_tel,m_gender,m_birth,m_nick,m_rank)
	VALUES (#{m_email},#{m_pw},#{m_name},#{m_tel},#{m_gender},#{m_birth},#{m_nick},'Bronze')
</insert>


<!-- ajax 아이디 중복확인 -->
<select id="checkId" parameterType="String" resultType="int">
        select count(*) from member where m_email=#{m_email}
</select>

<select id="checkNick" parameterType="String" resultType="int">
        select count(*) from member where m_nick=#{m_nick}
</select>


<!-- 로그인 -->
<select id="memberLogin" resultType="MemberVO" parameterType="map">
		SELECT * 
		FROM member
		WHERE m_email = #{m_email}
</select>



</mapper>